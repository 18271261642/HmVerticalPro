<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent">


    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="0dp">


        <ImageView
            android:layout_width="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@mipmap/icon_login_logo"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/loginServerTv"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textColor="#80ADE6"
            android:padding="5dp"
            android:text="液化石油气钢瓶检测站管理平台"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:background="@mipmap/icon_user_account"
                android:layout_height="35dp" />

            <EditText
                android:id="@+id/login_accountEdit"
                android:layout_width="match_parent"
                android:hint="请输入账号"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:background="@mipmap/icon_user_pwd"
                android:layout_height="35dp" />

            <EditText
                android:id="@+id/login_pwdEdit"
                android:layout_width="match_parent"
                android:hint="请输入密码"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/theme_color"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"/>



</LinearLayout>